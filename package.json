{
  "name": "e2e-test-automation",
  "version": "1.0.0",
  "description": "A POC for runnng e2e test automation to BrowerStack for cross platform, cross browser, best fit for responsive websites.",
  "scripts": {
    "lint": "tslint --project ./",
    "clear": "rm -f -r ./report/*.log && rm -f -r ./report/snapshots/*",
    "report": "npm run report:generate && open ./report/report.html",
    "report:generate": "node ./utils/reporter/merge-result.js ./report wdio-.*-CustomReporter.*\\.log && marge report/wdio-ma-merged.json --reportTitle \"Latest e2e test automation report\" -i -f report.html -o ./report",
    "start": "npm run clear && wdio wdio/base.conf.js",
    "start:parallel": "npm run clear && wdio wdio/start.parallel.conf.js",
    "start:browserstack:direct": "npm run clear && wdio wdio/browserstack.conf.js --baseUrl http://www.google.com",
    "start:browserstack": "npm run clear && wdio wdio/browserstack.conf.js",
    "start:bsLocal": "npm run clear && wdio wdio/browserstack-local.conf.js",
    "start:bsConnect": "./BrowserStackLocal --key xxxxxxxxxxxxxxxx",
    "test": "npm run clear && wdio wdio/test.conf.js",
    "tsc": "tsc",
    "add-env-variables": "gulp default"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/json-stringify-safe": "^5.0.0",
    "@types/mkdirp": "^0.5.2",
    "@types/uuidv4": "^2.0.0",
    "chromedriver": "^89.0.0",
    "faker": "^4.1.0",
    "fs-extra": "^7.0.1",
    "gifencoder": "^2.0.1",
    "json-stringify-safe": "^5.0.1",
    "lodash": "^4.17.14",
    "moment": "^2.24.0",
    "path": "^0.12.7",
    "png-js": "^0.1.1",
    "source-map-support": "^0.5.11",
    "source-map-url": "^0.4.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.5.1",
    "uuidv4": "^4.0.0",
    "webdriverio": "^5.11.6"
  },
  "devDependencies": {
    "@types/faker": "^4.1.5",
    "@types/jasmine": "3.3.12",
    "@types/lodash": "^4.14.136",
    "@types/webdriverio": "^4.13.3",
    "@wdio/cli": "^5.11.6",
    "@wdio/jasmine-framework": "^5.11.0",
    "@wdio/local-runner": "^5.11.6",
    "@wdio/spec-reporter": "^5.11.6",
    "@wdio/sync": "^5.11.0",
    "chalk": "2.4.2",
    "mochawesome-report-generator": "^5.2.0",
    "prettier": "1.14.3",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.14.0",
    "wdio-browserstack-service": "^0.1.18",
    "wdio-chromedriver-service": "^5.0.2",
    "wdio-mochawesome-reporter": "^3.1.0",
    "wdio-selenium-standalone-service": "0.0.12",
    "wdio-typescript-service": "0.0.3"
  },
  "optionalDependencies": {
    "gulp": "4.0.0",
    "gulp-json-editor": "^2.5.1"
  },
  "prettier": {
    "parser": "typescript",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
